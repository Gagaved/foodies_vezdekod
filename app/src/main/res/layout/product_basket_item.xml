<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_card"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:minHeight="200dp"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="@color/white"
    android:shadowColor="@color/black"
    android:shadowDx="30"
    android:shadowDy="60"
    android:shadowRadius="1"
    card_view:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50">
        </androidx.constraintlayout.widget.Guideline>

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/default_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="H,1:1"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/name"
            app:layout_constraintStart_toEndOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Том Ям"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints"></TextView>
        <com.google.android.material.button.MaterialButton
            android:theme="@style/buttonView"
            style="@style/buttonView"
            android:id="@+id/plus_button"
            app:icon="@drawable/ic_plus"
            app:iconTint="@color/primary"
            app:backgroundTint="@color/gray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cornerRadius="5dp"
            app:iconGravity="textStart"
            android:paddingStart="24dp"
            android:layout_marginStart="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:layout_constraintDimensionRatio="H,1:1.1"
            android:layout_margin="0dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/horline"
            app:layout_constraintStart_toEndOf="@id/vertline"

            >

        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:theme="@style/buttonView"
            style="@style/buttonView"
            android:id="@+id/minus_button"
            app:icon="@drawable/ic_minus"
            app:iconTint="@color/primary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:backgroundTint="@color/gray"
            app:cornerRadius="5dp"
            app:iconGravity="textStart"
            android:paddingStart="24dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:layout_constraintDimensionRatio="H,1:1.1"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/horline"
            app:layout_constraintStart_toEndOf="@id/image"
            >
        </com.google.android.material.button.MaterialButton>
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/horline"
            app:layout_constraintStart_toEndOf="@id/minus_button"
            app:layout_constraintEnd_toStartOf="@id/vertline"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="23"
            android:textSize="25dp"
            android:visibility="visible"
            android:textColor="@color/black"
            >
        </TextView>

        <TextView
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000rub"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="@id/horline"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/current_price"
            android:textSize="18sp"
            android:text="2344" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>