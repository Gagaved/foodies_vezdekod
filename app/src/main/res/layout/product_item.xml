<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_card"
    android:layout_width="200dp"
    android:layout_height="320dp"
    android:minHeight="300dp"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="@color/gray"
    android:shadowColor="@color/black"
    android:shadowDx="30"
    android:shadowDy="60"
    android:shadowRadius="1000000000000"
    app:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/default_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Том Ям"
            android:textSize="16dp"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints"></TextView>
        <TextView
            android:id="@+id/weight"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="500г"
            tools:ignore="MissingConstraints"></TextView>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40">
        </androidx.constraintlayout.widget.Guideline>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60">
        </androidx.constraintlayout.widget.Guideline>

        <com.google.android.material.button.MaterialButton
            android:visibility="visible"
            android:theme="@style/buttonView"
            style="@style/buttonView"
            android:id="@+id/first_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="18dp"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:theme="@style/buttonView"
            app:icon="@drawable/ic_plus"
            app:iconTint="@color/primary"
            style="@style/buttonView"
            android:id="@+id/plus_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:paddingStart="17dp"
            app:layout_constraintDimensionRatio="H,1:1.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertline2"
            android:visibility="invisible"
            >

        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:theme="@style/buttonView"
            style="@style/buttonView"
            android:id="@+id/minus_button"
            app:icon="@drawable/ic_minus"
            app:iconTint="@color/primary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="16dp"
            app:layout_constraintDimensionRatio="H,1:1.1"
            android:layout_margin="15dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertline1"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </com.google.android.material.button.MaterialButton>
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/vertline1"
            app:layout_constraintEnd_toStartOf="@id/vertline2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="0"
            android:textSize="25dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            >
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50">
        </androidx.constraintlayout.widget.Guideline>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55">
        </androidx.constraintlayout.widget.Guideline>
        <TextView
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="26dp"
            android:text="720"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"></TextView>
        <TextView
            android:id="@+id/left_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="26dp"
            android:text="440"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertline3"
            tools:ignore="MissingConstraints"></TextView>
        <TextView
            android:visibility="visible"
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="435"
            android:textColor="@color/dark_gray"
            android:textStyle="normal"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertline4"
            android:paddingBottom="28dp"
            tools:ignore="MissingConstraints"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>